{
  "name": "mi-e2ee-client-windows",
  "version": "1.2.0",
  "description": "E2EE Secure Chat Client (Final Integration Ready)",
  "main": "main.js",
  "scripts": {
    "start": "npx electron .",
    "build": "npx electron-builder --win",
    "bridge:build": "cd ../mi_bridge && npm install && npx node-gyp configure build"
  },
  "build": {
    "asarUnpack": [
      "mi_bridge/**"
    ],
    "files": [
      "**/*",
      "mi_bridge/**/*"
    ],
    "extraResources": [
      {
        "from": "mi_bridge/build/Release/mi_bridge.node",
        "to": "mi_bridge/build/Release/mi_bridge.node"
      }
    ]
  },
  "author": "Gemini & Codex",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "node-addon-api": "^7.0.0"
  }
}
